<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <lchplayer.com.lichao.ppjock.view.PPImageView
        android:id="@+id/blur_backgroud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_theme_10"/>

    <!--真正播放展示视频的view,会动态的添加的这里-->


    <lchplayer.com.lichao.ppjock.view.PPImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/play_btn"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center"
        android:src="@drawable/icon_video_play"/>


    <!--视频播放的进度条,动态添加-->
    <ProgressBar
        android:id="@+id/buffer_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone"
        android:indeterminateTint="@color/color_theme_10"/>

</merge>